<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.wanforme.munkblog.base.mapper.BlogMapper">

	<select id="qeuryTotoal" parameterType="cc.wanforme.munkblog.vo.blog.BlogSearchVo"
	 resultType="int">
	 	select count(0) from blog 
	 	<where>
	 		valid='1' 
	 		<if test="keyText!=null and keyText!=''"> and title like #{keyText}</if>
	 	</where> 
	</select>

	<select id="queryBlogs" resultType="cc.wanforme.munkblog.vo.blog.BlogResultRecorder">
	 	select id,title,createTime,updateTime from blog 
	 	<where>
	 		valid='1' 
	 		<if test="searchVo.keyText!=null and searchVo.keyText!=''"> and title like #{searchVo.keyText}</if>
	 	</where> 
	</select>

</mapper>
